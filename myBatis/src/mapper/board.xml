<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board.dao.BoardDAO">

	<sql id="selectBoard">
		select * from t_board
	</sql>

	<resultMap type="board" id="boardMap">
		<result column="view_cnt" property="viewCnt"/>
		<result column="reg_date" property="regDate" />
	</resultMap>

	<insert id="insert" parameterType="board" >
		insert into t_board(no, title, writer)
		 values(seq_t_board_no.nextval, #{ title }, #{ writer })
	</insert>

	<select id="selectAll2" resultMap="boardMap">
		<include refid="selectBoard" />
		 order by no desc
	</select>
	
	<select id="selectAll" resultType="board">
		select no, title, writer, content, view_cnt as viewCnt
			 , reg_date regDate
		  from t_board
		 order by no desc
	</select>
	
	<select id="selectByNo" parameterType="int" resultMap="boardMap">
		select *
		  from t_board
		 where no = #{ no }
	</select>
	
	<select id="selectByNo2" parameterType="board" resultMap="boardMap">
		<include refid="selectBoard" />
		 where no = #{ no }
	</select>
	
	<select id="selectWhere" parameterType="board" resultMap="boardMap">
		<include refid="selectBoard" />
		<where>
			<if test="title != null">
			 	title = #{title}
			</if> 
			<if test="writer != null">
			 	and writer = #{writer}
			</if>
		</where>
	</select>
	
	<select id="selectWhere2" parameterType="map" resultMap="boardMap">
		<include refid="selectBoard" />
		<where>
			<if test="title != null">
			 	title = #{title}
			</if> 
			<if test="writer != null">
			 	and writer = #{writer}
			</if>
		</where>
	</select>
	
	<select id="selectWhere3" parameterType="map" resultType="map">
		<include refid="selectBoard" />
		<where>
			no = #{no}
		</where>
	</select>
	
	<select id="selectNos" parameterType="int[]" resultMap="boardMap">
		<include refid="selectBoard" />
		where no in		
			<foreach collection="array" item="bno"
					 separator="," open="(" close=")">
				#{bno}
			</foreach>
			
	</select>

</mapper>



















